package task1Level2;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int r = 4;
		System.out.println("Введите координаты точки Х");
		double x = sc.nextDouble();
		System.out.println("Введите координаты точки Y");
		double y = sc.nextDouble();

		if (Math.sqrt(Math.pow(x, 2) + (Math.pow(y, 2))) <= 4) {
			System.out.println("Точка находиться в пределах круга");
		} else {
			System.out.println("Точка находиться за пределами круга");
		}

	}

}
